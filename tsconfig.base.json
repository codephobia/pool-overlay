{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@dashboard/components/search": [
                "libs/dashboard/components/search/src/index.ts"
            ],
            "@dashboard/components/pagination": [
                "libs/dashboard/components/pagination/src/index.ts"
            ],
            "@pool-overlay/models": ["libs/models/src/index.ts"],
            "@pool-overlay/scoreboard": ["libs/scoreboard/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
